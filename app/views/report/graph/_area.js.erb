/* INPUT: 'data' is an array of JS data points (setup prior to rendering this partial) - x-coord and y-coord are integers. */
/* OUTPUT: contents of JS variable 'vis' */

var s = 5,
	w = [data.length, 250].max()*s,
    h = 500,
    x = pv.Scale.linear(data.map(function(d){ return d['x']; }).min(), data.map(function(d){ return d['x']; }).max()).range(0, w),
    y = pv.Scale.linear(data.map(function(d){ return d['y']; }).min(), data.map(function(d){ return d['y']; }).max()).range(0, h);

/* The root panel. */
var vis = new pv.Panel()
    .width(w)
    .height(h)
    .bottom(20)
    .left(100)
    .right(10)
    .top(5);

/* Y-axis and ticks. */
var ylabel = vis.add(pv.Rule)
    .data(y.ticks())
    .bottom(y)
    .strokeStyle(function(d) d ? "#eee" : "#000")
  .anchor("left").add(pv.Label)
    .text(y.tickFormat);

/* X-axis and ticks. */
var xlabel = vis.add(pv.Rule)
    .data(x.ticks())
	.visible(function(d) d)
    .left(x)
    .bottom(-5)
    .height(5)
  .anchor("bottom").add(pv.Label)
    .text(x.tickFormat);

/* The area with top line. */
var area = vis.add(pv.Area)
    .data(data)
    .bottom(1)
    .left(function(d) x(d['x']))
    .height(function(d) y(d['y']))
    .fillStyle("rgb(121,173,210)")
  .anchor("top").add(pv.Line).lineWidth(2).add(pv.Dot)
    .size(1)
    .strokeStyle('black')
    .title(function(d) "{ x: "+d['x']+", y: "+d['y']+" }");
